# Cloudflare API Token (get from Cloudflare dashboard)
cloudflare_api_token = "your-cloudflare-api-token-here"

# Vultr API Key
vultr_api_key = "your-vultr-api-key-here"

# Domain configuration
# You'll need to get zone IDs from Cloudflare dashboard after adding domains
domains = {
  "jxqz" = {
    zone_id = "your-jxqz-zone-id-from-cloudflare"
    records = [
      {
        name    = "@"              # Root domain (jxqz.org)
        type    = "A"
        content = "server_ip_auto" # Will be set automatically to server IP
        ttl     = 300
        proxied = true             # Enable Cloudflare proxy for main site
      },
      {
        name    = "dx"             # Analytics subdomain (dx.jxqz.org)
        type    = "A"
        content = "server_ip_auto" # Will be set automatically to server IP
        ttl     = 300
        proxied = false            # No proxy for API/application
      }
    ]
  },
  
  "arpoison" = {
    zone_id = "your-arpoison-zone-id-from-cloudflare"
    records = [
      {
        name    = "@"              # Root domain (arpoison.net)
        type    = "A"
        content = "server_ip_auto" # Will be set automatically to server IP
        ttl     = 300
        proxied = true             # Enable Cloudflare proxy
      }
    ]
  },
  
  "suoc" = {
    zone_id = "your-suoc-zone-id-from-cloudflare"
    records = [
      {
        name    = "@"              # Root domain (suoc.org)
        type    = "A"
        content = "server_ip_auto" # Will be set automatically to server IP
        ttl     = 300
        proxied = true             # Enable Cloudflare proxy
      }
    ]
  }
}

